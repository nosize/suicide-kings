<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			width: 100%;
			height: 100%;
		}
		.header {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 3ex;
			font-family: "Lucida Sans Unicode", "Lucida Grande", "Arial", sans-serif;
			font-size: 11pt;
			background-color: #272e3f;
			color: #8694a1;
			overflow: hidden;
		}
		.nav {
			position: absolute;
			top: 6ex;
			left: 0;
			right: 0;
			height: 2ex;
			padding: 0.5ex 1em;
		}
		.selection, .information {
			position: absolute;
			top: 12ex;
			bottom: 0;
			width: 50%;
		}
		.selection {
			left: 0;
		}
		.information {
			right: 0;
		}
		.menu {
			position: absolute;
			left: 0;
			top: 0.5ex;
			bottom: 0.5ex;
			text-align: left;
		}
		.login {
			position: absolute;
			right: 0;
			top: 0.5ex;
			bottom: 0.5ex;
			text-align: right;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.container}">
		<g:FlowPanel styleName="{style.header}">
			<g:SimplePanel ui:field="menu" styleName="{style.menu}"></g:SimplePanel>
			<g:SimplePanel ui:field="login" styleName="{style.login}"></g:SimplePanel>
		</g:FlowPanel>
		<g:SimplePanel ui:field="navigation" styleName="{style.nav}"></g:SimplePanel>
		<g:SimplePanel ui:field="selection" styleName="{style.selection}"></g:SimplePanel>
		<g:SimplePanel ui:field="information" styleName="{style.information}"></g:SimplePanel>
	</g:FlowPanel>
</ui:UiBinder> 