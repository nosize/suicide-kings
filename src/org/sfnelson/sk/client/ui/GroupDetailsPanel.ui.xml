<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.sfnelson.sk.client.ui.GroupDetailsPanel.Style">
	h1 {
		font-size: 120%;
	}
	h2 {
		font-size: 80%;
		color: #888;
	}
	.admin {
		display: none;
	}
	.owner .admin {
		display: inline;
	}
	.panel {
		display: none;
	}
	.show {
		display: block;
	}
	.button {
		display: inline;
	}
	</ui:style>
	<g:FlowPanel ui:field="panel" styleName="{style.panel}">
		<g:HTMLPanel>
			<hgroup>
				<h1><g:InlineLabel ui:field="name" /></h1>
				<h2><g:InlineLabel ui:field="realm" />-<g:InlineLabel ui:field="server" /></h2>
			</hgroup>
		</g:HTMLPanel>
		
		<g:FlowPanel>
			<g:Button ui:field="select">Select</g:Button>
			<g:Button ui:field="delete" styleName="{style.admin}">Delete</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 