<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			width: 100%;
			height: 100%;
		}
		.header {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			padding: 0.5ex;
			height: 2ex;
			border-bottom: solid 1px #bba;
			overflow: hidden;
		}
		.selection, .information {
			position: absolute;
			top: 3ex;
			bottom: 0;
			width: 50%;
		}
		.selection {
			left: 0;
		}
		.information {
			right: 0;
		}
		.menu {
			position: absolute;
			left: 0;
			top: 0;
			height: 100%;
			text-align: left;
		}
		.login {
			position: absolute;
			right: 0;
			top: 0;
			height: 100%;
			text-align: right;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.container}">
		<g:FlowPanel styleName="{style.header}">
			<g:SimplePanel ui:field="menu" styleName="{style.menu}"></g:SimplePanel>
			<g:SimplePanel ui:field="login" styleName="{style.login}"></g:SimplePanel>
		</g:FlowPanel>
		<g:SimplePanel ui:field="selection" styleName="{style.selection}"></g:SimplePanel>
		<g:SimplePanel ui:field="information" styleName="{style.information}"></g:SimplePanel>
	</g:FlowPanel>
</ui:UiBinder> 