<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style type="org.sfnelson.sk.client.ui.LadderPanel.Style">
	.ladder {
		position: absolute;
		top: 1em;
		bottom: 1em;
		left: 1em;
		right: 1em;
		border-left: solid 1px #aaa;
		border-right: solid 1px #aaa;
	}
	.header, .footer {
		border-top: solid 1px #aaa;
		border-bottom: solid 1px #aaa;
		height: 3ex;
		padding: 0.5ex 0.5em;
		position: absolute;
		left: 0;
		right: 0;
	}
	.header {
		top: 0;
	}
	.footer {
		bottom: 0;
	}
	.contents {
		position: absolute;
		top: 4ex;
		bottom: 4ex;
		left: 0;
		right: 0;
	}
	.mode {
		float: right;
	}
	
	.edit, .view {
		display: none;
	}
	
	.editMode .edit {
		display: block;
	}
	.viewMode .view {
		display: block;
	}
	</ui:style>
	<g:FlowPanel styleName="{style.ladder}">
		<g:FlowPanel styleName="container">
			<g:FlowPanel styleName="{style.header}">
				<g:FlowPanel styleName="{style.view}">
					<g:Button ui:field="edit" styleName="{style.mode}">Edit</g:Button>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.edit}">
					<g:TextBox ui:field="name" />
					<g:Button ui:field="add">Add Character</g:Button>
					<g:Button ui:field="done" styleName="{style.mode}">Done</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
			<c:CellList ui:field="container" styleName="{style.contents}"/>
			<g:FlowPanel styleName="{style.footer}">
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 